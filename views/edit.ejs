<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Edit</title>
    <link rel="stylesheet" href="/edit.css">

</head>
<body>

<% library.forEach(item => { %>
<form action="/insert/<%= item.ISBN %>" method="POST">
    <h1>Edit Buku</h1>

    <label>Judul:</label>
    <input type="text" name="judul" value="<%= item.judul %>" required>
    <br>
    <label>Penerbit:</label>
    <input type="text" name="penerbit" value="<%= item.penerbit %>" required>
    <br>
    <label>Kategori:</label>
    <input type="text" name="kategori" value="<%= item.kategori %>" required>
    <br>
    <label>Penulis:</label>
    <input type="text" name="penulis" value="<%= item.penulis %>" required>
    <br>
    <label>ISBN:</label>
    <input type="text" name="ISBN" value="<%= item.ISBN %>" readonly>
    <br>
    <label>Sinopsis:</label>
    <textarea name="sinopsis"><%= item.sinopsis %></textarea>
    <br>
    <button type="submit">Simpan</button>
</form>
<% }) %>
</body>
</html>